    "configurations": [
        {
            "name": "Generate Expert Output GOT-10k",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                // check_prev_data         - [0/1] - 1 check prev data & ask if to delete; 0 otherwise
                "1",
                "depth_xtc"
            ]
        },
        {
            "name": "Generate Expert Output Taskonomy",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0",
            },
            "args": [
                // type    - 0 create preprocessed gt samples
                //         - 1 create preprocessed experts samples
                // gt: ['rgb', 'depth', 'edges', 'normals']
                // exp: ['halftone_gray_basic', 'depth_xtc', 'edges_dexined', 'normals_xtc', 'saliency_seg_egnet', 'rgb']
                "1",
                "depth_xtc"
            ]
        },
        {
            "name": "Save Edges",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "config1_save_edges.ini"
            ]
        },
        {
            "name": "Load Edges",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                // "config2_load_edges.ini"
                "config_elena.ini"
            ]
        }
    ]
