    "version": "0.2.0",
    "justMyCode": false,
    "configurations": [
        {
            "name": "Run file (without args)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },
        {
            "name": "Generate GOT-10k",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                // check_prev_data         - [0/1] - 1 check prev data & ask if to delete; 0 otherwise
                "1",
                "depth_xtc"
            ]
        },
        {
            "name": "Generate Taskonomy",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0",
            },
            "args": [
                // type    - 0 create preprocessed gt samples
                //         - 1 create preprocessed experts samples
                // gt: ['rgb', 'depth', 'edges', 'normals']
                // exp: ['halftone_gray_basic', 'depth_xtc', 'edges_dexined', 'normals_xtc', 'saliency_seg_egnet', 'rgb']
                // split: test valid train
                "1",
                "tiny-test",
                "normals_xtc",
            ]
        },
        {
            "name": "Generate Replica",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0",
            },
            "args": [
                // type    - 0 create preprocessed gt samples
                //         - 1 create preprocessed experts samples
                // gt: ['rgb', 'depth', 'edges', 'normals']
                // exp: ['halftone_gray_basic', 'depth_xtc', 'edges_dexined', 'normals_xtc', 'saliency_seg_egnet', 'rgb']
                // split: test val train
                "1",
                "val",
                "normals_xtc",
            ]
        },
        {
            "name": "config_elena.ini",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            },
            "args": [
                "config_elena.ini"
            ]
        },
        {
            "name": "Custom Config",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "configs_taskonomy/config_elena_no_edges.ini"
            ]
        },
    ]
}